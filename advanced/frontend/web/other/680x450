<script>


function jumpindex(){
    var indexurl = "http://www.qyer.com";
    var yuming = window.location.hostname;
    
    if(/iphone|ipod|android/i.test(navigator.userAgent.toLowerCase()) || yuming=="m.qyer.com" ){
        indexurl = "http://m.qyer.com";
    }else{
        indexurl = "http://www.qyer.com";
    }
    
    window.location = indexurl;
}
</script>
